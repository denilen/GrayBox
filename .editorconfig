root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.{cmd, bat, ps1}]
end_of_line = crlf

[*.{Config, config}]
indent_size = 2

[*.cs]
dotnet_diagnostic.CS1591.severity = none